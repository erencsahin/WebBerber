@model WebBerber.Models.Shop

@{
    ViewData["Title"] = "Dükkan Düzenle";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Dükkan Düzenle</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="EditShop" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="ShopName">Dükkan Adı</label>
            <input class="form-control" asp-for="ShopName" />
            <span asp-validation-for="ShopName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address">Adres</label>
            <input class="form-control" asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
