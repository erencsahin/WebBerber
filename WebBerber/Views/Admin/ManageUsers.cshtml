@model IEnumerable<WebBerber.Models.User>

<h2>Kullanıcı Yönetimi</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">E-posta</th>
            <th scope="col">Rol</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id">Düzenle</a> |
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" onclick="return confirm('Kullanıcıyı silmek istediğinizden emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>