@model IEnumerable<WebBerber.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Kullanıcı Yönetimi</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="AddUser" class="btn btn-success">Yeni Kullanıcı Ekle</a>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>E-posta</th>
                <th>Rol</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
