@model IEnumerable<WebBerber.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<h2>Kullanıcı Yönetimi</h2>

<a asp-action="AddUser">Yeni Kullanıcı Ekle</a>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>E-posta</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
