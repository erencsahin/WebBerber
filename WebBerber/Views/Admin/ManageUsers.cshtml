@model IEnumerable<WebBerber.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-primary">Kullanıcı Yönetimi</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="AddUser" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Yeni Kullanıcı Ekle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Ana Menü
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Henüz kullanıcı yok.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>E-posta</th>
                    <th>Rol</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
