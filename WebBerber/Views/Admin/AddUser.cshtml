@{
    ViewData["Title"] = "Kullanıcı Ekle";
}

<h2>Kullanıcı Ekle</h2>

<form method="post" asp-action="AddUser">
    <div>
        <label for="firstName">Ad:</label>
        <input type="text" id="firstName" name="FirstName" required />
    </div>
    <div>
        <label for="lastName">Soyad:</label>
        <input type="text" id="lastName" name="LastName" required />
    </div>
    <div>
        <label for="phoneNumber">Telefon Numarası:</label>
        <input type="text" id="phoneNumber" name="PhoneNumber" required />
    </div>
    <div>
        <label for="email">E-posta:</label>
        <input type="email" id="email" name="Email" required />
    </div>
    <div>
        <label for="role">Rol:</label>
        <select id="role" name="Role" required>
            <option value="2">Dükkan Sahibi</option>
            <option value="3">Müşteri</option>
        </select>
    </div>
    <div>
        <label for="password">Ad:</label>
        <input type="password" id="password" name="Password" required />
    </div>
    <div>
        <label for="gender">Cinsiyet:</label>
        <select id="gender" name="Gender" required>
            <option value="1">Erkek</option>
            <option value="2">Kadın</option>
        </select>
    </div>
    <button type="submit">Kaydet</button>
    <a asp-action="ManageShops" class="btn btn-secondary">Geri Git</a>
</form>
