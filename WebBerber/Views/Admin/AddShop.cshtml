@model WebBerber.Models.Shop

<div class="container mt-5">
    <h2 class="mb-4 text-center">Mağaza Ekle</h2>

    <form method="post" asp-action="AddShop" class="p-4 border rounded bg-light shadow-sm">
        <div class="mb-3">
            <label for="shopName" class="form-label">Mağaza Adı:</label>
            <input type="text" id="shopName" name="ShopName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="employees" class="form-label">Çalışan Sayısı:</label>
            <input type="number" id="employees" name="Employees" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Adres:</label>
            <textarea id="address" name="Address" class="form-control" rows="3" required></textarea>
        </div>
        <h5 class="mt-4">Çalışma Saatleri</h5>
        @for (int i = 0; i < 7; i++)
        {
            <div class="mb-4">
                <label class="form-label d-flex justify-content-between">
                    <span>@((DayOfWeek)i):</span>
                    <input type="checkbox" id="disable-@i" class="form-check-input" onchange="toggleDay(@i)">
                    <small>Bu günü devre dışı bırak</small>
                </label>

                <div id="day-@i" class="d-flex gap-2">
                    <input type="time" name="workingHours[@i].StartTime" class="form-control" value="09:00" />
                    <input type="time" name="workingHours[@i].EndTime" class="form-control" value="18:00" />
                    <input type="hidden" name="workingHours[@i].Day" value="@((DayOfWeek)i)" />
                </div>
            </div>
        }
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="ManageShops" class="btn btn-secondary">Geri Git</a>
        </div>
    </form>
</div>
