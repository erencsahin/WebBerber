@{
    ViewData["Title"] = "Mağaza Ekle";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Mağaza Ekle</h2>

    <form method="post" asp-action="AddShop" class="p-4 border rounded bg-light shadow-sm">
        <div class="mb-3">
            <label for="shopName" class="form-label">Mağaza Adı:</label>
            <input type="text" id="shopName" name="ShopName" class="form-control" placeholder="Mağaza adını giriniz" required />
        </div>

        <div class="mb-3">
            <label for="employees" class="form-label">Çalışan Sayısı:</label>
            <input type="number" id="employees" name="Employees" class="form-control" placeholder="Çalışan sayısını giriniz" required />
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Adres:</label>
            <textarea id="address" name="Address" class="form-control" rows="3" placeholder="Adres bilgilerini giriniz" required></textarea>
        </div>

        <h3 class="mt-4">Çalışma Saatleri</h3>
        <div id="working-hours" class="mt-3">
            <div class="mb-3 row align-items-center">
                <label for="mondayStart" class="col-sm-2 col-form-label">Pazartesi:</label>
                <div class="col-sm-4">
                    <input type="time" id="mondayStart" name="WorkingHours[0].StartTime" class="form-control" required />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="mondayEnd" name="WorkingHours[0].EndTime" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label for="tuesdayStart" class="col-sm-2 col-form-label">Salı:</label>
                <div class="col-sm-4">
                    <input type="time" id="tuesdayStart" name="WorkingHours[1].StartTime" class="form-control" required />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="tuesdayEnd" name="WorkingHours[1].EndTime" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label for="wednesdayStart" class="col-sm-2 col-form-label">Çarşamba:</label>
                <div class="col-sm-4">
                    <input type="time" id="wednesdayStart" name="WorkingHours[2].StartTime" class="form-control" required />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="wednesdayEnd" name="WorkingHours[2].EndTime" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label for="thursdayStart" class="col-sm-2 col-form-label">Perşembe:</label>
                <div class="col-sm-4">
                    <input type="time" id="thursdayStart" name="WorkingHours[3].StartTime" class="form-control" required />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="thursdayEnd" name="WorkingHours[3].EndTime" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label for="fridayStart" class="col-sm-2 col-form-label">Cuma:</label>
                <div class="col-sm-4">
                    <input type="time" id="fridayStart" name="WorkingHours[4].StartTime" class="form-control" required />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="fridayEnd" name="WorkingHours[4].EndTime" class="form-control" required />
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label for="saturdayStart" class="col-sm-2 col-form-label">Cumartesi:</label>
                <div class="col-sm-4">
                    <input type="time" id="saturdayStart" name="WorkingHours[5].StartTime" class="form-control" />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="saturdayEnd" name="WorkingHours[5].EndTime" class="form-control" />
                </div>
            </div>

            <div class="mb-3 row align-items-center">
                <label for="sundayStart" class="col-sm-2 col-form-label">Pazar:</label>
                <div class="col-sm-4">
                    <input type="time" id="sundayStart" name="WorkingHours[6].StartTime" class="form-control" />
                </div>
                <span class="col-sm-1 text-center">-</span>
                <div class="col-sm-4">
                    <input type="time" id="sundayEnd" name="WorkingHours[6].EndTime" class="form-control" />
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="ManageShops" class="btn btn-secondary">Geri Git</a>
        </div>
    </form>
</div>
