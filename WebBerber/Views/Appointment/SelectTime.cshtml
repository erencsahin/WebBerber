@model IEnumerable<DateTime>

<div class="container mt-5">
    <!-- Tarih Seçimi -->
    <h3 class="mb-4">Tarih Seçimi</h3>
    <form method="get" action="/Appointment/SelectTime">
        <div class="btn-group mb-4" role="group">
            @for (int i = 0; i < 7; i++) 
            {
                var date = DateTime.Today.AddDays(i);
                bool isSelected = ViewBag.SelectedDate == date.ToString("yyyy-MM-dd");

                <button type="submit" name="selectedDate" value="@date.ToString("yyyy-MM-dd")"
                        class="btn @(isSelected ? "btn-primary" : "btn-light")">
                    @date.ToString("dd MMM ddd")
                </button>
            }
        </div>

        <input type="hidden" name="shopId" value="@ViewBag.ShopId" />
        <input type="hidden" name="operationId" value="@ViewBag.OperationId" />
        <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />
    </form>

    <h4 class="mt-4 mb-3">Saat Seçimi</h4>
    @if (Model != null && Model.Any())
    {
        <form method="post" action="/Appointment/Summary">
            <div class="row g-3">
                @foreach (var time in Model)
                {
                    bool isPastTime = time < DateTime.Now;

                    <div class="col-2">
                        <button type="submit" class="btn @(isPastTime ? "btn-secondary disabled" : "btn-success") w-100"
                                name="StartTime" value="@time.ToString("yyyy-MM-ddTHH:mm")"
                        @(isPastTime ? "disabled" : "")>
                            @time.ToString("HH:mm")
                        </button>
                    </div>
                }
            </div>

            <input type="hidden" name="shopId" value="@ViewBag.ShopId" />
            <input type="hidden" name="operationId" value="@ViewBag.OperationId" />
            <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />
        </form>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Seçilen tarihte uygun saat bulunmamaktadır.
        </div>
    }
</div>
