<!-- Slider Section -->
<section id="carouselHero" class="carousel slide" data-bs-ride="carousel" data-aos="fade-in">
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <img src="/photos/slide1.jpg" class="d-block w-100" alt="Slide 1">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Kasap Studio'ya Hoş Geldiniz</h1>
                <p class="lead text-white text-shadow">Kişiye özel saç tasarımı ve profesyonel hizmetler için doğru yerdesiniz.</p>
                <a href="/Home/RandevuAl" class="btn btn-primary btn-lg mt-3">Hemen Randevu Al</a>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="/photos/slide2.png" class="d-block w-100" alt="Slide 2">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Modern Saç Kesimi</h1>
                <p class="lead text-white text-shadow">Profesyonel ekibimizle tarzınızı yeniden keşfedin.</p>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
            <img src="/photos/slide3.png" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Saç Bakımı ve Boyama</h1>
                <p class="lead text-white text-shadow">Sağlıklı, canlı saçlara kavuşun!</p>
            </div>
        </div>

        <!-- Slide 4 -->
        <div class="carousel-item">
            <img src="/photos/slide4.png" class="d-block w-100" alt="Slide 4">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Kişisel Bakım</h1>
                <p class="lead text-white text-shadow">Klasik ve modern görünümler için uzman dokunuş.</p>
            </div>
        </div>

        <!-- Slide 5 -->
        <div class="carousel-item">
            <img src="/photos/slide5.png" class="d-block w-100" alt="Slide 5">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Kaliteli Hizmet</h1>
                <p class="lead text-white text-shadow">Kendinizi şımartmak için doğru adres!</p>
            </div>
        </div>

    </div>

    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselHero" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselHero" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</section>

<!-- Hizmetler ve Ücretler -->
<section class="services py-5" data-aos="fade-up">
    <div class="container">
        <h2 class="text-center mb-5">Hizmetlerimiz ve Ücretlerimiz</h2>
        <div class="row">
            <!-- Erkek Hizmetleri -->
            <div class="col-md-6" data-aos="fade-right">
                <div class="service-card bg-dark text-white position-relative" style="background-image: url('/photos/hizmetler-erkek.jpg');">
                    <div class="overlay"></div>
                    <h3 class="text-center text-white mb-4">Erkek Hizmetlerimiz</h3>
                    <ul class="list-group list-unstyled text-white">
                        @foreach (var service in (List<WebBerber.Models.Operation>)ViewData["MenServices"])
                        {
                            <li class="d-flex justify-content-between mb-3">
                                <span>@service.OperationName</span>
                                <span class="fw-bold">@service.Price ₺</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <!-- Kadın Hizmetleri -->
            <div class="col-md-6" data-aos="fade-left">
                <div class="service-card bg-dark text-white position-relative" style="background-image: url('/photos/hizmetler-kadin.jpg');">
                    <div class="overlay"></div>
                    <h3 class="text-center text-white mb-4">Kadın Hizmetlerimiz</h3>
                    <ul class="list-group list-unstyled text-white">
                        @foreach (var service in (List<WebBerber.Models.Operation>)ViewData["WomenServices"])
                        {
                            <li class="d-flex justify-content-between mb-3">
                                <span>@service.OperationName</span>
                                <span class="fw-bold">@service.Price ₺</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Yapay Zeka Önerileri Bölümü -->
<section class="ai-suggestions py-5" data-aos="fade-up">
    <div class="container">
        <h2 class="text-center mb-4">Yapay Zekadan Öneriler Alın</h2>
        <p class="text-center mb-5">En uygun saç tasarımı için hemen deneyin!</p>
        <div class="row g-4">
            <!-- Kart 1 -->
            <div class="col-md-4">
                <div class="d-flex align-items-center bg-light rounded shadow-sm">
                    <div class="p-4 bg-danger text-white rounded-start">
                        <i class="fas fa-cut fa-2x"></i>
                    </div>
                    <div class="p-3">
                        <h5 class="fw-bold">Kişiye Özel</h5>
                        <p class="mb-0">Saç tasarım modelleri</p>
                    </div>
                </div>
            </div>
            <!-- Kart 2 -->
            <div class="col-md-4">
                <div class="d-flex align-items-center bg-light rounded shadow-sm">
                    <div class="p-4 bg-danger text-white rounded-start">
                        <i class="fas fa-quote-left fa-2x"></i>
                    </div>
                    <div class="p-3">
                        <h5 class="fw-bold">Kişiye Özel</h5>
                        <p class="mb-0">Yüz şekline göre saç kesimleri</p>
                    </div>
                </div>
            </div>
            <!-- Kart 3 -->
            <div class="col-md-4">
                <div class="d-flex align-items-center bg-light rounded shadow-sm">
                    <div class="p-4 bg-danger text-white rounded-start">
                        <i class="fas fa-chair fa-2x"></i>
                    </div>
                    <div class="p-3">
                        <h5 class="fw-bold">Kişiye Özel</h5>
                        <p class="mb-0">Saç renklendirme işlemi</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hemen Deneyin Butonu -->
        <div class="text-center mt-4">
            <a asp-controller="AIIntegration" asp-action="Index" class="btn btn-primary btn-lg">
                Hemen Deneyin
            </a>
        </div>
    </div>
</section>
<!-- Randevu Bölümü -->
<section class="appointment text-center py-5" data-aos="fade-up">
    <div class="container">
        <h2 class="fw-bold">Randevunuzu Hemen Oluşturun</h2>
        @if (Context.Session.GetString("UserEmail") != null)
        {
            <!-- Kullanıcı oturum açmışsa -->
            <a asp-controller="Customer" asp-action="ListShops" class="btn btn-success btn-lg" data-aos="fade-up" data-aos-delay="200">
                Randevu Al
            </a>
        }
        else
        {
            <!-- Kullanıcı oturum açmamışsa -->
            <a asp-controller="Login" asp-action="Index" class="btn btn-success btn-lg" data-aos="fade-up" data-aos-delay="200">
                Oturum Aç
            </a>
        }
    </div>
</section>
