@model IEnumerable<WebBerber.Models.Operation>
@{
    ViewData["Title"] = "Anasayfa";
}

<!-- Slider Section -->
<section id="carouselHero" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active">
            <img src="/photos/slide1.png" class="d-block w-100" alt="Slide 1">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Kasap'a Hoş Geldiniz</h1>
                <p class="lead text-white text-shadow">Kişiye özel saç tasarımı ve profesyonel hizmetler için doğru yerdesiniz.</p>
                <a href="/Home/RandevuAl" class="btn btn-primary btn-lg mt-3">Hemen Randevu Al</a>
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="/photos/slide2.png" class="d-block w-100" alt="Slide 2">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Modern Saç Kesimi</h1>
                <p class="lead text-white text-shadow">Profesyonel ekibimizle tarzınızı yeniden keşfedin.</p>
            </div>
        </div>
        <!-- Slide 3 -->
        <div class="carousel-item">
            <img src="/photos/slide3.png" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Saç Bakımı ve Boyama</h1>
                <p class="lead text-white text-shadow">Sağlıklı, canlı saçlara kavuşun!</p>
            </div>
        </div>
        <!-- Slide 4 -->
        <div class="carousel-item">
            <img src="/photos/slide4.png" class="d-block w-100" alt="Slide 4">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Uzman Ekibimiz</h1>
                <p class="lead text-white text-shadow">Her zaman sizin için en iyisini sunuyoruz.</p>
            </div>
        </div>
        <!-- Slide 5 -->
        <div class="carousel-item">
            <img src="/photos/slide5.png" class="d-block w-100" alt="Slide 5">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center">
                <h1 class="display-4 fw-bold text-white text-shadow">Online Randevu Kolaylığı</h1>
                <p class="lead text-white text-shadow">Dakikalar içinde randevunuzu oluşturun!</p>
            </div>
        </div>
    </div>

    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselHero" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Önceki</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselHero" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Sonraki</span>
    </button>
</section>


<section class="services py-5">
    <div class="container">
        <h2 class="text-center mb-5">Hizmetlerimiz ve Ücretlerimiz</h2>
        @Html.Partial("_OperationPartial", Model) <!-- Partial View'i çağırıyoruz -->
    </div>
</section>


<!-- Yapay Zeka Önerileri Bölümü -->
<section class="ai-suggestions py-5">
    <div class="container">
        <h2 class="text-center mb-4">Yapay Zekadan Öneriler Alın</h2>
        <p class="text-center mb-5">En uygun saç tasarımı için hemen deneyin!</p>
        <div class="row g-4">
            <!-- Kart 1 -->
            <div class="col-md-4">
                <div class="d-flex align-items-center bg-light rounded shadow-sm">
                    <div class="p-4 bg-danger text-white rounded-start">
                        <i class="fas fa-cut fa-2x"></i>
                    </div>
                    <div class="p-3">
                        <h5 class="fw-bold">Kişiye Özel</h5>
                        <p class="mb-0">Saç tasarım modelleri</p>
                    </div>
                </div>
            </div>
            <!-- Kart 2 -->
            <div class="col-md-4">
                <div class="d-flex align-items-center bg-light rounded shadow-sm">
                    <div class="p-4 bg-danger text-white rounded-start">
                        <i class="fas fa-quote-left fa-2x"></i>
                    </div>
                    <div class="p-3">
                        <h5 class="fw-bold">Kişiye Özel</h5>
                        <p class="mb-0">Yüz şekline göre saç kesimleri</p>
                    </div>
                </div>
            </div>
            <!-- Kart 3 -->
            <div class="col-md-4">
                <div class="d-flex align-items-center bg-light rounded shadow-sm">
                    <div class="p-4 bg-danger text-white rounded-start">
                        <i class="fas fa-chair fa-2x"></i>
                    </div>
                    <div class="p-3">
                        <h5 class="fw-bold">Kişiye Özel</h5>
                        <p class="mb-0">Saç renklendirme işlemi</p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hemen Deneyin Butonu -->
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="YapayZeka" class="btn btn-primary btn-lg">
                Hemen Deneyin
            </a>
        </div>
    </div>
</section><!-- Galeri Bölümü -->
<section class="gallery py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Çalışmalarımız</h2>
        <div class="row g-3">
            <div class="col-md-4">
                <img src="/photos/slide1.png" class="img-fluid rounded" alt="Saç Modeli 1">
            </div>
            <div class="col-md-4">
                <img src="/photos/slide1.png" class="img-fluid rounded" alt="Saç Modeli 2">
            </div>
            <div class="col-md-4">
                <img src="/photos/slide1.png" class="img-fluid rounded" alt="Saç Modeli 3">
            </div>
        </div>
    </div>
</section>

<!-- Randevu Bölümü -->
<section class="appointment text-center py-5">
    <div class="container">
        <h2 class="fw-bold">Randevunuzu Hemen Oluşturun</h2>
        <p>En uygun zamanınızı seçerek kolayca randevu alabilirsiniz.</p>
        <a href="/Home/RandevuAl" class="btn btn-success btn-lg">Randevu Al</a>
    </div>
</section>
