<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Yönetim Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/admin.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <!-- Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Logo ve Marka Adı -->
        <a asp-controller="Home" asp-action="Index" class="navbar-brand ps-3">
            <img src="/photos/logo.png" alt="image" class="navbar-logo me-2" style="height: 40px;" />
            Kuaför Yönetim Paneli
        </a>

        <!-- Sidebar Toggle -->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Kullanıcı Menüsü -->
        <ul class="navbar-nav ms-auto me-3">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a asp-controller="Login" asp-action="Logout" class="dropdown-item">Çıkış</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Layout -->
    <div id="layoutSidenav">
        <!-- Sidebar -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Ana Menü</div>

                        <!-- Dashboard -->
                        <a asp-controller="Admin" asp-action="Index" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Yönetim</div>

                        <!-- Kullanıcı Yönetimi -->
                        <a asp-controller="Admin" asp-action="ManageUsers" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                            Kullanıcı Yönetimi
                        </a>

                        <!-- Mağaza Yönetimi -->
                        <a asp-controller="Admin" asp-action="ManageShops" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-store"></i></div>
                            Mağaza Yönetimi
                        </a>

                        <!-- Çalışan Yönetimi -->
                        <a asp-controller="Admin" asp-action="ManageEmployees" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-tie"></i></div>
                            Çalışan Yönetimi
                        </a>

                        <!-- Mağaza Sahibi Yönetimi -->
                        <a asp-controller="Admin" asp-action="ManageShopOwners" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-crown"></i></div>
                            Mağaza Sahipleri
                        </a>

                        <div class="sb-sidenav-menu-heading">İşlemler</div>

                        <!-- Kullanıcı Ekle -->
                        <a asp-controller="Admin" asp-action="AddUser" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-plus"></i></div>
                            Kullanıcı Ekle
                        </a>

                        <!-- Mağaza Ekle -->
                        <a asp-controller="Admin" asp-action="AddShop" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-plus-circle"></i></div>
                            Mağaza Ekle
                        </a>

                        <!-- Çalışan Ekle -->
                        <a asp-controller="Admin" asp-action="AddEmployee" class="nav-link">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-plus"></i></div>
                            Çalışan Ekle
                        </a>
                    </div>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div id="layoutSidenav_content">
            <main role="main" class="pb-3" style="padding: 2rem;">
                @RenderBody()
            </main>
            <!-- Footer -->
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Kuaför Yönetim Paneli 2023</div>
                        <div>
                            <a href="#">Gizlilik Politikası</a>
                            &middot;
                            <a href="#">Şartlar ve Koşullar</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>
