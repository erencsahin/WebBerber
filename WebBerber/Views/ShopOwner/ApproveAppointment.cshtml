@model IEnumerable<WebBerber.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Onayı";
}

<h2>Onay Bekleyen Randevular</h2>

<table>
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>İşlem</th>
            <th>Başlangıç</th>
            <th>Ücret</th>
            <th>Onay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.UserId</td>
                <td>@appointment.OperationId</td>
                <td>@appointment.StartTime</td>
                <td>@appointment.Price</td>
                <td>
                    <form method="post" asp-action="ApproveAppointment">
                        <input type="hidden" name="id" value="@appointment.Id" />
                        <button type="submit">Onayla</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
