@model IEnumerable<WebBerber.Models.Employee>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6" data-aos="fade-up">
            <div class="card shadow-lg border-0">
                <!-- Kart Başlığı -->
                <div class="card-header bg-dark text-white text-center py-3">
                    <h3 class="fw-bold mb-0">Çalışan Seçimi</h3>
                </div>
                <!-- Kart İçeriği -->
                <div class="card-body bg-light px-4 py-4">
                    <form method="get" action="/Appointment/CheckAvailability">
                        <!-- Çalışan Seçimi -->
                        <div class="mb-4">
                            <label for="employee" class="form-label text-dark fw-bold">Çalışan Seçiniz</label>
                            <select id="employee" name="employeeId" class="form-select rounded-pill shadow-sm" required>
                                <option value="" disabled selected>Bir çalışan seçin</option>
                                @foreach (var employee in Model)
                                {
                                    <option value="@employee.Id">@employee.Name</option>
                                }
                            </select>
                        </div>
                        <!-- Gizli Alanlar -->
                        <input type="hidden" name="shopId" value="@ViewBag.ShopId" />
                        <input type="hidden" name="operationId" value="@ViewBag.OperationId" />
                        <!-- Devam Butonu -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark rounded-pill shadow-sm py-2">
                                Devam
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
